{
  "settings": {
    "index": {
      "analysis": {
        "normalizer": {
          "lowercase_normalizer": {
            "type": "custom",
            "filter": [
              "lowercase"
            ]
          }
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "id": {
        "type": "keyword"
      },
      "userId": {
        "type": "text",
        "fielddata": true
      },
      "query": {
        "type": "keyword",
        "normalizer": "lowercase_normalizer"
      },
      "isDeleted": {
        "type": "boolean",
        "default":false
      },
      "timestamp": {
        "type": "date"
      }
    }
  }
}
